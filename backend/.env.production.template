# ========================================
# PRODUCTION ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env on your VPS and update all values
# NEVER commit .env files to version control!

# ========================================
# DATABASE CONFIGURATION
# ========================================
# IMPORTANT: Use strong credentials, not default values!
DATABASE_URL="postgresql://YOUR_DB_USER:YOUR_STRONG_PASSWORD@localhost:5432/school_management2?schema=school_comms&timezone=Africa/Addis_Ababa"

DB_NAME=school_management2
DB_USER=YOUR_DB_USER
DB_PASSWORD=YOUR_STRONG_PASSWORD
DB_HOST=localhost
DB_PORT=5432

# ========================================
# JWT CONFIGURATION
# ========================================
# CRITICAL: Generate a strong random secret (64+ characters)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('base64').replace(/[^a-zA-Z0-9]/g, ''))"
JWT_SECRET="GENERATE_A_RANDOM_64_CHARACTER_STRING_HERE"
JWT_EXPIRES_IN=24h

# ========================================
# SECURITY SETTINGS
# ========================================
NODE_ENV=production
HTTPS_ENABLED=true

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=5000
FRONTEND_URL=https://iqrab3.skoolific.com

# ========================================
# AI06 BIOMETRIC DEVICE CONFIGURATION
# ========================================
# Enable WebSocket service for biometric attendance devices
AI06_WEBSOCKET_ENABLED=true
AI06_WEBSOCKET_PORT=7788

# Update with your actual device IP address
AI06_DEVICE_IP=192.168.1.201
AI06_DEVICE_PORT=80

# ========================================
# EMAIL CONFIGURATION (REQUIRED)
# ========================================
# For Gmail: Enable 2FA and generate App Password
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-actual-email@gmail.com
SMTP_PASS=your-actual-app-password

# ========================================
# SSL CONFIGURATION (if using HTTPS)
# ========================================
# Paths to SSL certificate files
# Let's Encrypt certificates are usually in /etc/letsencrypt/live/your-domain/
SSL_KEY_PATH=/etc/letsencrypt/live/iqrab3.skoolific.com/privkey.pem
SSL_CERT_PATH=/etc/letsencrypt/live/iqrab3.skoolific.com/fullchain.pem

# ========================================
# NOTES
# ========================================
# 1. Replace ALL placeholder values before deployment
# 2. Keep this file secure - never share or commit it
# 3. Use strong passwords (16+ characters, mixed case, numbers, symbols)
# 4. Regularly rotate JWT_SECRET and database passwords
